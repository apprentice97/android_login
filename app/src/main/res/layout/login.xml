<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/layout_title_login" layout="@layout/layout_title_login" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/login_select"
            android:layout_marginTop="88dp"
            android:orientation="horizontal"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <TextView
                    android:text="国家/地区"
                    android:id="@+id/tv_login_select"
                    android:textSize = "15sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text = "text"
                    android:id="@+id/tv_login_select_text"
                    android:textSize = "15sp"
                    android:layout_toRightOf="@id/tv_login_select"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_login_select" />
                <ImageView
                    android:id="@+id/select_country"
                    android:background="@drawable/greater"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null" />
            </RelativeLayout>



        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_height="1dp"
            android:background="#000000"
            />
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/phone_number"
                android:layout_width="20sp"
                android:layout_height="30sp"
                />
            <EditText
                android:hint="手机号"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:textSize = "15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.LinearLayoutCompat>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/password"
                android:layout_width="20sp"
                android:layout_height="30sp" />
            <EditText
                android:hint="密码(6到20位)"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textSize = "15sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_forget_password"
                android:text = "| 忘记密码"
                android:textColor="#ff8604"
                android:layout_marginLeft="0sp"
                android:textSize = "15sp"
                android:layout_width="75sp"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <Button
            android:id="@+id/bt_login"
            android:text="登录"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/login_button"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textSize = "15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_register"
            android:text="注册"
            android:layout_marginTop="10dp"
            android:textColor="#0ecfb0"
            android:background="@drawable/register_button"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textSize = "15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
